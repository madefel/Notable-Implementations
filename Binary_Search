#BINARY TREE THEORY HERE: https://docs.google.com/document/d/1_9bixpm35Zy2gHv5cBxqP7145tnhT6eYIM1LjHTWp_Y/edit

#include <iostream>
#include <vector>

#include<bits/stdc++.h> 
using namespace std;

int main() {
    int x = 20; //value you want to search
    vector<int> array = {10, 15, 20, 25, 30};
    
    if (binary_search(array.begin(), array.end(), x)) {
      cout << "Value found in position: " << lower_bound(array.begin(), array.end(), x) - array.begin();
      cout << endl;
    }
    else cout << "Value not found" << endl;
    
    return 0;
}
